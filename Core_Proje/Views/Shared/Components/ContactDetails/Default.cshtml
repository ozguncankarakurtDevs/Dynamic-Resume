@using EntityLayer.Concrete
@model List<Contact>

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">

    @foreach (var item in Model)
    {
        <div class="mt-3 px-1">
            <div class="h5">@item.Title</div>
            <p>@item.Description </p>
            <p>Aşağıdaki adresler üzerinden mail gönderebilir veya sorularınızı iletebilirsiniz.</p>
            <p>Görüşmek üzere!</p>
        </div>
        <div class="mt-53 px-1">
            <div class="row">
                <div class="col-sm-2">
                    <div class="pb-1">Email:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder"><a style="text-decoration:none;" href="mailto:@item.Mail">@item.Mail</a></div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">LinkedIn:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder"><a style="text-decoration:none;" href="https://tr.linkedin.com/in/ozguncan-karakurt">Özgürcan Karakurt</a> </div>
                </div>
                <div class="col-sm-2">
                    <div class="pb-1">Telefon:</div>
                </div>
                <div class="col-sm-10">
                    <div class="pb-1 fw-bolder">@item.Phone</div>
                </div>
            </div>
        </div>
    }
</div>